@import "monolight.rasi"

* {
    background-color:       @background;
    text-color:             @foreground;
	font:				 	"Iosevka Nerd Font 14";
}

window {
    width:      			220px;
    padding:    			25px;
    border:					0px;
    border-radius:          12px;
    border-color:           @accent;
    location:               center;
    y-offset: 			-50px;
}

entry {
    expand: 				true;
    text-color:				@accent;
}
